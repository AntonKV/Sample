<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RobotoRegular">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="RobotoRegular.ColorBlackOpacity87">
        <item name="android:textColor">@color/color_black_opacity_87</item>
    </style>

    <style name="RobotoRegular.ColorBlackOpacity87.textSize20">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="RobotoRegular.ColorBlackOpacity87.textSize20.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RobotoRegular.ColorBlackOpacity87.textSize16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RobotoRegular.ColorBlackOpacity87.textSize16.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RobotoRegular.ColorBlackOpacity87.textSize14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RobotoRegular.ColorBlackOpacity87.textSize12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="RobotoMedium">
        <item name="android:fontFamily">font/roboto_medium</item>
    </style>

    <style name="RobotoMedium.ColorBlackOpacity87">
        <item name="android:textColor">@color/color_black_opacity_87</item>
    </style>

    <style name="RobotoMedium.ColorBlackOpacity87.textSize20">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="RobotoMedium.ColorBlackOpacity87.textSize20.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RobotoMedium.ColorBlackOpacity87.textSize16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RobotoMedium.ColorBlackOpacity87.textSize16.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RobotoMedium.ColorBlackOpacity87.textSize14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RobotoMedium.ColorBlackOpacity87.textSize12">
        <item name="android:textSize">12sp</item>
    </style>
</resources>
